<h1> -<%= @interest.name %>- </h1>

<h2>Users who share this interest:</h2>


  <div class="row">
  <%  @user_interests.each do |u| %>


        <% if u.interest == @interest && u.user != @user %>

            <div class="col-lg-3 col-md-6">
              <h4><%= u.user.username%></h4>
            <img src= '<%=u.user.image_url%>', height=200><br></br>
            <%= link_to 'View Profile', u.user, class: "btn btn-secondary btn-block" %>
            <%= link_to 'Invite to a Link-Up', new_link_up_path, class: "btn btn-secondary btn-block" %>
          </div>

        <% end %>
      <% end %>

    </div>

<br>
      <h4><%= link_to 'Back to My Profile', @user, class: "btn btn-primary"%><br></h4>
