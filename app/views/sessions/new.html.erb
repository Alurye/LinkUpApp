<% if flash[:errors] %>
  <h3><%= flash[:errors] %></h3>
<% end %>


<h4> Welcome Back! Enter your login information below: </h4><br>


<div class="form_container col-md-4 offset-md-4">
  <h2>Log In</h2>

<%= form_tag sessions_path do %>
  <div class="form-group">
  <%= label_tag :username %>
  <%= text_field_tag :username, "", {:class => 'form-control'}%>
</div>
<div class="form-group">

  <%= label_tag :password %>
  <%= password_field_tag :password, "", {:class => 'form-control'} %>

  </div>
  <%= submit_tag "Login", {:class => 'btn btn-primary btn-block'} %>



<% end %>
</div>
